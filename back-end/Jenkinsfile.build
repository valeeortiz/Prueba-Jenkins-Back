pipeline {
    agent any

    environment {
        IMAGE_NAME = "image-dfp-backend"
    }

    stages {
        stage('Install Dependencies') {
            steps {
                dir('back-end') {
                    bat 'npm install'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('back-end') {
                    bat "docker build -t %IMAGE_NAME%:%BUILD_ID% ."
                }
            }
        }
    }
}
