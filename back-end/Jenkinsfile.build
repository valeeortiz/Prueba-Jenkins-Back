pipeline {
    agent any

    environment {
        IMAGE_NAME = "image-dfp-backend"
    }

    stages{

        stage('Construir imagen Docker') {
            steps {
                sh "cd back-end"
                sh "docker build -t ${IMAGE_NAME}:${BUILD_ID} ."
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
    }
}
