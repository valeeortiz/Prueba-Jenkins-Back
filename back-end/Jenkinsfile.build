pipeline {
    agent any

    environment {
        IMAGE_NAME = "image-dfp-backend"
    }

    stages {
        stage('Install Dependencies') {
            steps {

                bat "cd back-end"
                bat "npm run install"
            }
        }

        stage('Build Docker Image') {
            steps {
                
                bat "cd back-end"
                bat "docker build -t ${IMAGE_NAME}:${BUILD_ID} ."
                
            }
        }
    }
}
