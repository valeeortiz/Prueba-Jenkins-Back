pipeline {
    agent any

    environment {
        IMAGE_NAME = "image-dfp-backend"
    }

    stages {
        stage('Install Dependencies') {
            steps {
                dir('back-end') {
                    sh 'npm run install'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('back-end') {
                    sh "docker build -t ${IMAGE_NAME}:${BUILD_ID} ."
                }
            }
        }
    }
}
